<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/profile_page_tlbr_rellay"
                android:background="@color/primaryBlue"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_page_back_btn"
                    android:src="@drawable/ic_chevron_left_white_24dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/profile_page_header_tv"
                    android:textAlignment="center"
                    android:text="Profile"
                    android:textColor="#fff"
                    android:fontFamily="@font/metropolisbold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOG OUT"
                    android:textSize="12sp"
                    android:id="@+id/profile_page_logout_tv"
                    android:layout_marginEnd="10dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/metropolissemibold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/profile_page_tlbr_rellay"
                android:textColor="@color/primaryBlue"
                android:textSize="15sp"
                android:fontFamily="@font/metropolisbold"
                android:id="@+id/tv_name"
                android:text="Name:"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/profile_page_name_et"
        android:hint="Ayush Sharma"
        android:fontFamily="@font/metropolisbold"
        android:singleLine="true"
        android:inputType="textPersonName"
        android:layout_toRightOf="@id/tv_name"
        android:layout_alignBottom="@id/tv_name"
        android:layout_marginHorizontal="10dp"
        android:textSize="15sp"
        android:backgroundTint="#00FFFFFF"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColor="@color/primaryBlue"
        />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_name"
                android:textColor="@color/primaryBlue"
                android:textSize="15sp"
                android:fontFamily="@font/metropolisbold"
                android:id="@+id/tv_age"
                android:text="Age:"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/profile_page_age_et"
                android:hint="17"
                android:fontFamily="@font/metropolisbold"
                android:singleLine="true"
                android:inputType="number"
                android:layout_toRightOf="@id/tv_age"
                android:layout_alignBottom="@id/tv_age"
                android:layout_marginHorizontal="10dp"
                android:textSize="15sp"
                android:backgroundTint="#00FFFFFF"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/primaryBlue"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_age"
                android:textColor="@color/primaryBlue"
                android:textSize="15sp"
                android:fontFamily="@font/metropolisbold"
                android:id="@+id/tv_gender"
                android:text="Gender:"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/profile_page_gender_et"
                android:hint="Male"
                android:fontFamily="@font/metropolisbold"
                android:singleLine="true"
                android:inputType="none"
                android:layout_toRightOf="@id/tv_gender"
                android:layout_alignBottom="@id/tv_gender"
                android:layout_marginHorizontal="10dp"
                android:textSize="15sp"
                android:backgroundTint="#00FFFFFF"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/primaryBlue"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_gender"
                android:textColor="@color/primaryBlue"
                android:textSize="15sp"
                android:fontFamily="@font/metropolisbold"
                android:id="@+id/tv_mob"
                android:text="Mobile Number:"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/profile_page_mobile_et"
                android:hint="+91 9318458933"
                android:fontFamily="@font/metropolisbold"
                android:singleLine="true"
                android:inputType="number"
                android:layout_toRightOf="@id/tv_mob"
                android:layout_alignBottom="@id/tv_mob"
                android:layout_marginHorizontal="10dp"
                android:textSize="15sp"
                android:backgroundTint="#00FFFFFF"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/primaryBlue"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_mob"
                android:textColor="@color/primaryBlue"
                android:textSize="15sp"
                android:fontFamily="@font/metropolisbold"
                android:id="@+id/tv_email"
                android:text="Email ID:"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/profile_page_email_et"
                android:hint="ayush@gmail.com"
                android:fontFamily="@font/metropolisbold"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:layout_toRightOf="@id/tv_email"
                android:layout_alignBottom="@id/tv_email"
                android:layout_marginHorizontal="10dp"
                android:textSize="15sp"
                android:backgroundTint="#00FFFFFF"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/primaryBlue"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_email"
                android:textColor="@color/primaryBlue"
                android:textSize="15sp"
                android:fontFamily="@font/metropolisbold"
                android:id="@+id/tv_bday"
                android:text="Date Of Birth:"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/profile_page_bday_et"
                android:hint="17/01/1945"
                android:fontFamily="@font/metropolisbold"
                android:singleLine="true"
                android:inputType="none"
                android:layout_toRightOf="@id/tv_bday"
                android:layout_alignBottom="@id/tv_bday"
                android:layout_marginHorizontal="10dp"
                android:textSize="15sp"
                android:backgroundTint="#00FFFFFF"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/primaryBlue"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/tv_bday"
                android:textColor="@color/primaryBlue"
                android:textSize="15sp"
                android:fontFamily="@font/metropolisbold"
                android:id="@+id/tv_anniversary"
                android:text="Anniversary:"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/profile_page_anniversary_et"
                android:hint="17/01/1998"
                android:fontFamily="@font/metropolisbold"
                android:singleLine="true"
                android:inputType="none"
                android:layout_toRightOf="@id/tv_anniversary"
                android:layout_alignBottom="@id/tv_anniversary"
                android:layout_marginHorizontal="10dp"
                android:textSize="15sp"
                android:backgroundTint="#00FFFFFF"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/primaryBlue"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/bg_button"
                android:backgroundTint="@color/primaryBlue"
                android:textColor="@color/white"
                android:id="@+id/profile_update_button"
                android:text="Update"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryBlue"
                android:textSize="14sp"
                android:text="@string/update_detail_text"
                android:layout_above="@id/profile_update_button"
                android:gravity="center"/>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>