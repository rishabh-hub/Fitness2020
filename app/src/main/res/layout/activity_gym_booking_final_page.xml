<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GymBookingFinalPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/gym_internal_activity_tlbr_rellay"
        android:background="@color/primaryBlue"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/final_booking_page_back_btn"
            android:src="@drawable/ic_chevron_left_white_24dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Details"
            android:textSize="20sp"
            android:textColor="#fff"
            android:fontFamily="@font/metropolisbold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/membership_activity_header_tv"
            />

    </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Activity:"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/gym_internal_activity_tlbr_rellay"
            android:id="@+id/activity"
            android:fontFamily="@font/metropolisbold"
            android:textSize="17sp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Yoga"
            android:fontFamily="@font/metropolisbold"
            android:layout_marginTop="10dp"
            android:layout_below="@id/gym_internal_activity_tlbr_rellay"
            android:layout_toRightOf="@id/activity"
            android:id="@+id/final_booking_page_gym_activity"
            android:textSize="17sp"
            android:textColor="@color/bookBtn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Booking for:"
            android:layout_marginStart="10dp"
            android:layout_below="@id/final_booking_page_gym_activity"
            android:id="@+id/offer"
            android:fontFamily="@font/metropolisbold"
            android:textSize="17sp"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:fontFamily="@font/metropolisbold"
            android:text="1 Month Subscription"
            android:layout_below="@id/final_booking_page_gym_activity"
            android:layout_toRightOf="@id/offer"
            android:id="@+id/final_booking_page_gym_offer"
            android:textSize="17sp"
            android:textColor="@color/bookBtn"/>






    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:padding="5dp"
        android:layout_below="@id/final_booking_page_gym_offer"
        android:id="@+id/line1"
        android:layout_marginVertical="10dp"
        android:background="@color/colorPrimaryDark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Select Date"
        android:layout_below="@id/line1"
        android:id="@+id/date"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/metropolisbold"
        android:textSize="17sp"
        android:textColor="@color/primaryBlue"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:layout_marginStart="10dp"
        android:text="@string/date_explain_txt"
        android:layout_below="@id/date"
        android:id="@+id/date_explain"
        android:fontFamily="@font/metropolismedium"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/final_booking_page_gym_date_rv"
        android:layout_below="@id/date_explain"
        android:orientation="horizontal"
        android:padding="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:padding="5dp"
        android:layout_below="@id/final_booking_page_gym_date_rv"
        android:id="@+id/line2"
        android:layout_marginVertical="10dp"
        android:background="@color/colorPrimaryDark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Select Time"
        android:layout_marginStart="10dp"
        android:layout_below="@id/line2"
        android:id="@+id/time"
        android:fontFamily="@font/metropolisbold"
        android:textSize="17sp"
        android:textColor="@color/primaryBlue"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:text="@string/time_explain_start"
        android:layout_below="@id/time"
        android:layout_marginStart="10dp"
        android:id="@+id/time_explain"
        android:fontFamily="@font/metropolismedium"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/final_booking_page_gym_time_rv"
        android:layout_below="@id/time_explain"
        android:orientation="horizontal"
        android:padding="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:padding="5dp"
        android:layout_below="@id/final_booking_page_gym_time_rv"
        android:id="@+id/line3"
        android:layout_marginVertical="10dp"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Size of Group: "
        android:layout_marginStart="10dp"
        android:layout_below="@id/line3"
        android:id="@+id/squad"
        android:fontFamily="@font/metropolisbold"
        android:textSize="17sp"
        android:textColor="@color/primaryBlue"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        
        android:hint="Enter Number"
        android:layout_alignStart="@id/final_booking_page_gym_promoET"
        android:textAlignment="center"
        android:layout_below="@id/line3"
        android:backgroundTint="@color/primaryBlue"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/squad"
        android:id="@+id/final_booking_page_gym_groupET"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/bookBtn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:padding="5dp"
        android:layout_below="@id/final_booking_page_gym_groupET"
        android:id="@+id/line4"
        android:layout_marginVertical="10dp"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Enter Promo Code: "
        android:layout_below="@id/line4"
        android:id="@+id/promo"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textSize="17sp"
        android:textColor="@color/primaryBlue"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:hint="Enter Here"
        android:textAlignment="center"
        android:layout_below="@id/line4"
        android:backgroundTint="@color/primaryBlue"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/promo"
        android:id="@+id/final_booking_page_gym_promoET"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/bookBtn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:padding="5dp"
        android:layout_below="@id/final_booking_page_gym_promoET"
        android:id="@+id/line5"
        android:layout_marginVertical="10dp"
        android:background="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mode_of_payment"
        android:layout_below="@id/line5"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Mode of Payment"
            android:layout_below="@id/line4"
            android:id="@+id/mode_of_payment_txt"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/primaryBlue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:text="@string/mop_txt"
            android:layout_below="@id/time"
            android:id="@+id/mop_explain_txt"
            android:fontFamily="@font/metropolismedium"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Free Trial"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/metropolisbold"
                android:id="@+id/free_trial_radio_btn"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Unlimited Workout"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/metropolisbold"
                android:id="@+id/unlimited_workout_radio_btn"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Points"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/metropolisbold"
                android:id="@+id/points_radio_btn"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Cash"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/metropolisbold"
                android:id="@+id/cash_radio_btn"/>
        </RadioGroup>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:padding="5dp"
        android:layout_below="@id/mode_of_payment"
        android:id="@+id/line6"
        android:layout_marginVertical="10dp"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Net Amount: "
        android:layout_below="@id/line6"
        android:id="@+id/amount"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/metropolisblack"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Rs 999"
        android:layout_below="@id/line6"
        android:id="@+id/final_booking_page_gym_amount"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/primaryBlue"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_button"
        android:layout_below="@id/amount"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:text="Proceed to Payment"
        android:textColor="#fff"
        android:elevation="12dp"
        android:id="@+id/final_booking_page_gym_book_btn"/>












</RelativeLayout>
</ScrollView>