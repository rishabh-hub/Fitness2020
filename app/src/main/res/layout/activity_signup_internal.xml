<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupInternalActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/signup_internal_page_tlbr_rellay"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signup_internal_page_back_btn"
                    android:src="@drawable/ic_chevron_left_black_24dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGNUP"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:fontFamily="@font/metropolisbold"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/signup_internal_page_header_tv"
                    />
            </RelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_internal_page_name_et"
                android:hint="Enter Name"
                android:fontFamily="@font/metropolislight"
                android:layout_below="@+id/signup_internal_page_tlbr_rellay"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:singleLine="true"
                android:layout_marginHorizontal="15dp"
                android:textSize="15sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_internal_page_email_et"
                android:hint="Signup with Email id"
                android:fontFamily="@font/metropolislight"
                android:layout_below="@+id/signup_internal_page_name_et"
                android:layout_marginVertical="15dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:layout_marginHorizontal="15dp"
                android:textSize="15sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_internal_page_number_et"
                android:hint="Enter phone number"
                android:fontFamily="@font/metropolislight"
                android:layout_below="@+id/signup_internal_page_email_et"
                android:layout_marginVertical="15dp"
                android:singleLine="true"
                android:inputType="number"
                android:layout_marginHorizontal="15dp"
                android:textSize="15sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_internal_page_password_et"
                android:hint="Enter password"
                android:fontFamily="@font/metropolislight"
                android:layout_below="@+id/signup_internal_page_number_et"
                android:layout_marginVertical="15dp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_marginHorizontal="15dp"
                android:textSize="15sp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/signup_internal_page_password_et"
                android:layout_marginEnd="20dp"
                android:id="@+id/signup_internal_page_cb_rel_lay"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signup_internal_page_terms_cb"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I agree to Terma and Conditions of Fitness2020"
                    android:gravity="center"
                    android:fontFamily="@font/metropolissemibold"
                    android:layout_toEndOf="@id/signup_internal_page_terms_cb"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:id="@+id/signup_internal_page_terms_tv"
                    />

            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIGNUP"
                android:layout_marginHorizontal="30dp"
                android:layout_below="@id/signup_internal_page_cb_rel_lay"
                android:textSize="20sp"
                android:id="@+id/signup_internal_page_signup_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:textColor="#fff"
                android:fontFamily="@font/metropolismedium"
                android:background="@drawable/bg_profile_update_button"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>