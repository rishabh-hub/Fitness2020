<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GymOfferTab">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gym_tab_offering"
                android:fontFamily="@font/metropolisbold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:layout_alignParentTop="true"
                android:text="Offerings"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gym_offers_rv"
                android:layout_below="@id/gym_tab_offering"
                android:layout_marginVertical="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="5dp"
                android:id="@+id/gym_line1"
                android:layout_below="@id/gym_offers_rv"
                android:background="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gym_tab_facilities"
                android:fontFamily="@font/metropolisbold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:text="Facilities"
                android:layout_below="@id/gym_line1"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:id="@+id/gym_facilities_rv"
                android:layout_below="@id/gym_tab_facilities"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="5dp"
                android:id="@+id/gym_line2"
                android:layout_below="@id/gym_facilities_rv"
                android:background="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gym_tab_timings"
                android:fontFamily="@font/metropolisbold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:text="Timings"
                android:layout_below="@id/gym_line2"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:id="@+id/timing_container"
                android:layout_below="@id/gym_tab_timings">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_textview"
                    android:weightSum="7">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolisbold"
                        android:textAlignment="center"
                        android:text="Monday"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolisbold"
                        android:textAlignment="center"
                        android:text="Tuesday"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolisbold"
                        android:textAlignment="center"
                        android:text="Wednesday"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolisbold"
                        android:textAlignment="center"
                        android:text="Thursday"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolisbold"
                        android:textAlignment="center"
                        android:text="Friday"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolisbold"
                        android:textAlignment="center"
                        android:text="Saturday"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolisbold"
                        android:textAlignment="center"
                        android:text="Sunday"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="@drawable/bg_textview"
                    android:orientation="vertical"
                    android:weightSum="7">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolisbold"
                        android:textAlignment="center"
                        android:id="@+id/mon_time"
                        android:text="Monday"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolisbold"
                        android:id="@+id/tues_time"
                        android:textAlignment="center"
                        android:text="Tuesday"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolisbold"
                        android:textAlignment="center"
                        android:id="@+id/wed_time"
                        android:text="Wednesday"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolisbold"
                        android:textAlignment="center"
                        android:id="@+id/thurs_time"
                        android:text="Thursday"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolisbold"
                        android:textAlignment="center"
                        android:text="Friday"
                        android:id="@+id/fri_time"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolisbold"
                        android:textAlignment="center"
                        android:text="Saturday"
                        android:id="@+id/sat_time"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolisbold"
                        android:textAlignment="center"
                        android:text="Sunday"
                        android:id="@+id/sun_time"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="5dp"
                android:id="@+id/gym_line3"
                android:layout_below="@id/timing_container"
                android:background="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gym_tab_reviews"
                android:fontFamily="@font/metropolisbold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:text="Reviews"
                android:textAlignment="center"
                android:layout_below="@id/gym_line3"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/gym_tab_reviews_rv"
                android:layout_below="@id/gym_tab_reviews"/>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>