<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".fragments.TrialCardActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trial_card_imagerv"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/membership_faq_rv_heading"
        android:layout_below="@id/trial_card_imagerv"
        android:fontFamily="@font/metropolisbold"
        android:text="FAQs"
        android:layout_margin="10dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trial_card_faq_rv"
        android:layout_below="@id/membership_faq_rv_heading"
        android:orientation="vertical"

        android:layout_marginTop="5dp"
        />

</RelativeLayout>