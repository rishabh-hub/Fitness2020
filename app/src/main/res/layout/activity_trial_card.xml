<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/webGray"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryBlue"
        android:elevation="10dp"
        android:id="@+id/membership_page_toolbar"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_left_arrow"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/white"
            android:id="@+id/memberships_page_back_btn"/>

    </RelativeLayout>

    <ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
        android:layout_below="@id/membership_page_toolbar"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TrialCardActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trial_card_imagerv"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/primaryBlue"
        android:id="@+id/membership_heading"
        android:layout_below="@id/trial_card_imagerv"
        android:fontFamily="@font/metropolisblack"
        android:text="Our Memberships"
        android:layout_margin="10dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/membership_heading"
    android:id="@+id/container_1"
    android:gravity="center"
    android:weightSum="2">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="@drawable/bg_pack"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/trial_membership_1">

        <ImageView
            android:id="@+id/trial_1_month_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/month_1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:weightSum="2"
            android:layout_toRightOf="@id/trial_1_month_icon">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trial_1_month_text"
            android:text="1-month membership"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/metropolisblack"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trial_1_month_text2"
            android:text="₹200"
            android:textColor="@color/secondryBlue"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/metropolisblack"/>
</LinearLayout>



    </RelativeLayout>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/container_1"
        android:id="@+id/container_2"
        android:gravity="center"
        android:weightSum="2">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_pack"
            android:elevation="10dp"
            android:layout_below="@id/trial_membership_1"
            android:id="@+id/trial_membership_2">

            <ImageView
                android:id="@+id/trial_2_month_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/month_3"
                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_toRightOf="@id/trial_2_month_icon">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/trial_2_month_text"
                    android:text="3-month membership"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/metropolisblack"/>
                `<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/trial_2_month_text2"
                    android:text="₹450"
                    android:layout_weight="1"
                    android:textColor="@color/secondryBlue"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/metropolisblack"/>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/container_2"
        android:id="@+id/container_3"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:weightSum="2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="@drawable/bg_pack"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:id="@+id/trial_membership_3">

        <ImageView
            android:id="@+id/trial_3_month_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:src="@drawable/month_6"
            android:layout_alignParentStart="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/trial_3_month_icon">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trial_3_month_text"
                android:text="6-month membership"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="19sp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/metropolisblack"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trial_3_month_text2"
                android:text="₹600"
                android:textColor="@color/secondryBlue"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/metropolisblack"/>
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/container_3"
        android:id="@+id/container_4"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:weightSum="2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="10dp"
            android:background="@drawable/bg_pack"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/trial_membership_3"
            android:id="@+id/trial_membership_4">

            <ImageView
                android:id="@+id/trial_4_month_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:src="@drawable/month_12"
                android:layout_alignParentStart="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_toRightOf="@id/trial_4_month_icon">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/trial_4_month_text"
                    android:text="1-year membership"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/metropolisblack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/trial_4_month_text2"
                    android:text="₹1200"
                    android:layout_weight="1"
                    android:textColor="@color/secondryBlue"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/metropolisblack"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/trial_container_3"
        android:layout_below="@id/container_4"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:id="@+id/trial_promo_tv"
            android:gravity="center"
            android:textColor="#fff"
            android:paddingHorizontal="15dp"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/metropolissemibold"
            android:text="PROMO CODE"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/trial_promo_et"
            android:padding="3dp"
            android:gravity="center"
            android:layout_toEndOf="@+id/trial_promo_tv"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/white"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_below="@id/trial_promo_et"
            android:text="Enter promo code to avail exciting offers. "
            android:textAlignment="center"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:id="@+id/membership_benefit_heading"
        android:layout_below="@id/trial_container_3"
        android:fontFamily="@font/metropolisbold"
        android:text="Benefits"
        android:layout_margin="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@id/membership_benefit_heading"
        android:id="@+id/trial_benefit_1">

        <ImageView
            android:id="@+id/trial_1_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/bullet"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trial_1_text"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toRightOf="@id/trial_1_icon"
            android:text="Unrestricted access to 20+ Fitness Activities"
            android:textSize="14sp"
            android:fontFamily="@font/metropolisblack"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@id/trial_benefit_1"
        android:id="@+id/trial_benefit_2">

        <ImageView
            android:id="@+id/trial_2_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/bullet"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trial_2_text"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/trial_2_icon"
            android:text="unlimited free trials with top Fitness Centers"
            android:textSize="14sp"
            android:fontFamily="@font/metropolisblack"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@id/trial_benefit_2"
        android:id="@+id/trial_benefit_3">

        <ImageView
            android:id="@+id/trial_3_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/bullet"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trial_3_text"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/trial_3_icon"
            android:text="Access to Live classes with top Fitness Centers."
            android:textSize="14sp"
            android:fontFamily="@font/metropolisblack"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@id/trial_benefit_3"
        android:id="@+id/trial_benefit_4">

        <ImageView
            android:id="@+id/trial_4_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/bullet"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trial_4_text"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/trial_4_icon"
            android:text="Save upto 60% on bookings"
            android:textSize="14sp"
            android:fontFamily="@font/metropolisblack"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@id/trial_benefit_4"
        android:id="@+id/trial_benefit_5">

        <ImageView
            android:id="@+id/trial_5_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/bullet"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trial_5_text"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/trial_5_icon"
            android:text="Estimated savings of upto Rs 5000  on this membership"
            android:textSize="14sp"
            android:fontFamily="@font/metropolisblack"/>
    </RelativeLayout>


</RelativeLayout>
</ScrollView>
</RelativeLayout>