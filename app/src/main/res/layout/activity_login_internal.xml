<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginInternalActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/login_internal_page_tlbr_rellay"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_internal_page_back_btn"
                    android:src="@drawable/ic_chevron_left_black_24dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOGIN"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:fontFamily="@font/metropolisbold"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/login_internal_page_header_tv"
                    />

            </RelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_internal_page_username_et"
                android:hint="Enter Username"
                android:fontFamily="@font/metropolislight"
                android:layout_below="@+id/login_internal_page_tlbr_rellay"
                android:layout_marginTop="80dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:layout_marginHorizontal="15dp"
                android:textSize="15sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_internal_page_password_et"
                android:hint="Enter Email id"
                android:fontFamily="@font/metropolislight"
                android:layout_below="@+id/login_internal_page_username_et"
                android:layout_marginVertical="30dp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_marginHorizontal="15dp"
                android:textSize="15sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:layout_marginHorizontal="30dp"
                android:layout_below="@id/login_internal_page_password_et"
                android:textSize="20sp"
                android:id="@+id/login_internal_page_login_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:textColor="#fff"
                android:fontFamily="@font/metropolismedium"
                android:background="@drawable/bg_profile_update_button"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_internal_page_login_btn"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/login_internal_page_tv_container"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Don't have an account? "
                android:id="@+id/login_internal_page_tv"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/login_internal_page_tv"
                android:layout_marginTop="15dp"
                android:text="Signup here"
                android:id="@+id/login_internal_page_signup_btn"
                android:layout_marginStart="5dp"
                />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/login_internal_page_tv_container"
                android:text="OR"
                android:id="@+id/login_internal_page_tv_OR"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/login_internal_page_tv_OR"
                android:text="Login using"
                android:id="@+id/login_internal_page_tv_using"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/login_internal_page_tv_using"
                >

                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="GOOGLE"
                    android:background="@drawable/bg_profile_update_button"
                    android:textColor="#fff"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/login_internal_page_google_btn"
                    />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="FACEBOOK"
                    android:background="@drawable/bg_profile_update_button"
                    android:textColor="#fff"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20sp"
                    android:textSize="20sp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/login_internal_page_facebook_btn"
                    />


            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>


        </RelativeLayout>