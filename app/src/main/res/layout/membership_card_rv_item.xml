<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="250dp">


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:id="@+id/trial_card">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/webGray">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="5dp"
        android:textColor="@color/primaryBlue"
        android:id="@+id/pack_name"
        android:text="All City Pack"
        android:textSize="15sp"
        android:fontFamily="@font/metropolisbold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:layout_below="@id/pack_name"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/metropolismedium"
                android:id="@+id/membership_item_features"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/primaryBlue"
                android:text="Free Webinars "/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/metropolisbold"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:id="@+id/starting_at"
                android:text="starting at"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignBaseline="@id/starting_at"
                    android:fontFamily="@font/metropolismedium"
                    android:layout_toLeftOf="@id/pack_cost"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/pack_base_cost"
                    android:text="₹4000"/>
            <TextView
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textColor="@color/primaryBlue"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignBaseline="@id/starting_at"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/metropolisbold"
                android:layout_height="wrap_content"
                android:id="@+id/pack_cost"
                android:text="₹2499"/>
            </RelativeLayout>
        </LinearLayout>

</RelativeLayout>

</androidx.cardview.widget.CardView>
</RelativeLayout>
