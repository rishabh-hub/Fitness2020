<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:textSize="17sp"
        android:id="@+id/head"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/metropolisblack"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:id="@+id/warning"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryDark"
        android:padding="15dp"
        android:fontFamily="@font/metropolisbold"
        android:text="This webinar is not a part of your current membership pack.Checkout our membership section now for exciting benefits."/>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/warning"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="15dp"
    >

        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Become a member"
            android:id="@+id/dialog_become_member_btn"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            />

    </LinearLayout>


</RelativeLayout>