<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WebinarBookingConfirmationActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/webinar_confirmation_cut_btn"
        android:tint="@color/primaryBlue"
        android:src="@drawable/ic_close_24px"
        android:layout_margin="10dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_correct"
        android:paddingHorizontal="160dp"
        android:id="@+id/icon1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15sp"
        android:textSize="17sp"
        android:textColor="@color/primaryBlue"
        android:fontFamily="@font/metropolisblack"
        android:layout_below="@id/icon1"
        android:text="CONFIRMED!"
        android:layout_centerHorizontal="true"
        android:id="@+id/head"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Booking has been done successful. The details are as following:"
        android:layout_below="@id/head"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textcontainer"
        android:textSize="15sp"
        android:paddingHorizontal="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow our instagram profile to be able to acces the class"
        android:layout_above="@id/follow_button"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/metropolisbold"
        android:id="@+id/text_container_1"
        android:textSize="15dp"
        android:textAlignment="center"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:id="@+id/follow_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@drawable/bg_button"
        android:text="Follow us"
        android:textColor="@color/white"
        android:fontFamily="@font/metropolisbold"
        android:padding="15dp"
        />


</RelativeLayout>