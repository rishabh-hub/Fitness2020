<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WebinarBookingConfirmationActivity">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/webinar_confirmation_cut_btn"
        android:src="@drawable/ic_right_arrow"
        android:layout_margin="10dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_correct"
        android:paddingHorizontal="160dp"
        android:id="@+id/icon1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15sp"
        android:textSize="17sp"
        android:textColor="@color/primaryBlue"
        android:fontFamily="@font/metropolisblack"
        android:layout_below="@id/icon1"
        android:text="CONFIRMED!"
        android:layout_centerHorizontal="true"
        android:id="@+id/head"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Booking has been done successful. The details are as following:"
        android:layout_below="@id/head"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:paddingHorizontal="20dp"/>


</RelativeLayout>