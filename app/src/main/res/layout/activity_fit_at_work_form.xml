<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FitAtWorkForm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="@color/primaryBlue"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/get_started_page_back_btn"
            android:src="@drawable/ic_chevron_left_white_24dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Get Started"
            android:textColor="#fff"
            android:fontFamily="@font/metropolisbold"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="20dp"
        android:paddingHorizontal="20dp"
        android:id="@+id/et_container"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:backgroundTint="@color/primaryBlue"
            app:boxStrokeColor="@color/primaryBlue"
            app:boxStrokeWidth="2dp"
            android:textColorHint="@color/primaryBlue"
            app:hintTextColor="@color/webGray"
            android:hint="Your name"            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your name"
                android:singleLine="true"
                android:textColor="@color/primaryBlue"
                android:id="@+id/get_started_page_individual_name"
                android:padding="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:backgroundTint="@color/primaryBlue"
            app:boxStrokeColor="@color/primaryBlue"
            app:boxStrokeWidth="2dp"
            android:textColorHint="@color/primaryBlue"
            android:focusedByDefault="true"
            app:hintTextColor="@color/webGray"
            android:hint="Company name"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:singleLine="true"
                android:textColor="@color/primaryBlue"
                android:id="@+id/get_started_page_company_name"
                android:padding="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:backgroundTint="@color/primaryBlue"
            app:boxStrokeColor="@color/primaryBlue"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/webGray"
            android:hint="Email id"
            android:textColorHint="@color/primaryBlue"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email id"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:textColor="@color/primaryBlue"
                android:id="@+id/get_started_page_email_id"
                android:padding="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:backgroundTint="@color/primaryBlue"
            app:boxStrokeColor="@color/primaryBlue"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/webGray"
            android:hint="Phone Number"
            android:textColorHint="@color/primaryBlue"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:singleLine="true"
                android:inputType="phone"
                android:textColor="@color/primaryBlue"
                android:id="@+id/get_started_page_phone_no"
                android:padding="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:backgroundTint="@color/primaryBlue"
            app:boxStrokeColor="@color/primaryBlue"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/webGray"
            android:hint="Enter Comments"
            android:textColorHint="@color/primaryBlue"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Comments"
                android:singleLine="true"
                android:textColor="@color/primaryBlue"
                android:id="@+id/get_started_page_comments"
                android:padding="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button"
        android:layout_below="@id/et_container"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/metropolisbold"
        android:backgroundTint="@color/primaryBlue"
        android:text="Submit"
        android:textColor="#fff"
        android:id="@+id/get_started_page_submit_button"/>

</RelativeLayout>