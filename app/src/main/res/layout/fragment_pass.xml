<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/head_banner"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardBackgroundColor="#000"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/head_banner"
    android:orientation="horizontal"
    android:weightSum="3"
    android:layout_marginVertical="10dp"
    android:id="@+id/memberships_container">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_margin="3dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="10dp"
        android:layout_weight="1"
        android:id="@+id/trial_card">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="5dp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:id="@+id/card_title_11"
                android:text="Unlimited"
                android:textSize="14sp"
                android:fontFamily="@font/metropolisbold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginHorizontal="5dp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:layout_below="@id/card_title_11"
                android:id="@+id/card_title_12"
                android:text="Trials"
                android:textSize="14sp"
                android:fontFamily="@font/metropolisbold"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardCornerRadius="10dp"
            android:layout_below="@id/card_title_12">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:fontFamily="@font/metropolisbold"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="starting at"/>
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/metropolisbold"
                android:layout_height="wrap_content"
                android:text="₹99"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_margin="3dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#C0C0C0"
        app:cardCornerRadius="10dp"
        android:layout_weight="1"
        android:id="@+id/workout_card">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="6dp"
                android:textColor="#fff"
                android:id="@+id/card_title_21"
                android:text="Unlimited"
                android:textSize="14sp"
                android:fontFamily="@font/metropolisbold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="6dp"
                android:textColor="#fff"
                android:layout_below="@id/card_title_21"
                android:id="@+id/card_title_22"
                android:text="Workouts"
                android:textSize="14sp"
                android:fontFamily="@font/metropolisbold"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardCornerRadius="10dp"
                android:layout_below="@id/card_title_22">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        android:textSize="17sp"
                        android:fontFamily="@font/metropolisbold"
                        android:layout_height="wrap_content"
                        android:text="starting at"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textColor="#C0C0C0"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/metropolisbold"
                        android:layout_height="wrap_content"
                        android:text="₹499"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_margin="3dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#000"
        android:layout_weight="1"
        android:id="@+id/validity_card">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="5dp"
                android:textColor="#fff"
                android:id="@+id/card_title_31"
                android:text="Unlimited"
                android:textSize="14sp"
                android:fontFamily="@font/metropolisbold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_below="@id/card_title_31"
                android:textAlignment="center"
                android:layout_marginHorizontal="5dp"
                android:textColor="#fff"
                android:id="@+id/card_title_32"
                android:text="Validity"
                android:textSize="14sp"
                android:fontFamily="@font/metropolisbold"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardCornerRadius="10dp"
                android:layout_below="@id/card_title_32">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:fontFamily="@font/metropolisbold"
                        android:layout_marginTop="20dp"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"
                        android:text="starting at"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textColor="#000"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/metropolisbold"
                        android:layout_height="wrap_content"
                        android:text="₹999"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/free_trial_rv_heading"
        android:layout_below="@id/memberships_container"
        android:fontFamily="@font/metropolisbold"
        android:text="Free Trial"
        android:layout_margin="10dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/free_trial_rv_heading"
        android:layout_marginBottom="3dp"
        android:id="@+id/free_trial_rv_container">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5sp"
                android:id="@+id/pass_fragment_fitness_pass_rv"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/pass_fragment_fitness_pass_rv"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View More"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="2dp"
                    android:layout_marginVertical="13sp"
                    android:id="@+id/free_trial_rv_more_btn"
                    />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="1dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_right_arrow"/>
            </LinearLayout>
        </RelativeLayout>


    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/fitness_pass_rv_heading"
        android:layout_below="@id/free_trial_rv_container"
        android:fontFamily="@font/metropolisbold"
        android:text="Fitness Pass"
        android:layout_margin="10dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fitness_pass_rv_heading"
        android:layout_marginBottom="10dp"
        android:id="@+id/home_banner2_rv_container">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5sp"
                android:id="@+id/fitness_pass_banner2_rv"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/fitness_pass_banner2_rv"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View More"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="2dp"
                    android:layout_marginVertical="13sp"
                    android:id="@+id/fitness_pass_rv_more_btn"
                    />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="1dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_right_arrow"/>
            </LinearLayout>
        </RelativeLayout>


    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/fitness_pass_video_rv_heading"
        android:layout_below="@id/home_banner2_rv_container"
        android:fontFamily="@font/metropolisbold"
        android:text="Videos"
        android:layout_margin="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_below="@+id/fitness_pass_video_rv_heading"
        android:id="@+id/fitness_pass_video_rv"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clients_heading"
        android:layout_below="@id/fitness_pass_video_rv"
        android:fontFamily="@font/metropolisblack"
        android:text="Our Clients"
        android:padding="10dp"
        android:textSize="17dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/clients_heading"
        android:id="@+id/fitness_at_work_clients">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/fitness_at_work_clients_rv"/>


    </RelativeLayout>

</RelativeLayout>

</ScrollView>