<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="10dp"
    android:elevation="10dp"
    app:cardBackgroundColor="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10sp"
    android:layout_marginVertical="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/head"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textColor="@color/primaryBlue"
                android:text="1-Month Membership"
                android:textSize="20sp"
                android:fontFamily="@font/metropolisblack"
                android:gravity="center_vertical"
                android:id="@+id/membership_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/primaryBlue"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryBlue"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/head"
            android:textSize="19sp"
            android:gravity="end"
            android:layout_marginTop="10dp"
            android:text="Rs 1200"
            android:fontFamily="@font/metropolisblack"
            android:paddingHorizontal="8dp"
            android:id="@+id/membership_price"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/membership_price"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:fontFamily="@font/metropolisbold"
            android:text="starting at"
            android:layout_marginStart="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="end|center_vertical"
            android:layout_marginTop="8dp"
            android:layout_below="@id/membership_price">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="Book Now"
            android:id="@+id/membership_book_btn"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginBottom="7dp"
            android:layout_toRightOf="@id/membership_book_btn"
            android:src="@drawable/ic_right_arrow"
            android:tint="@color/colorPrimaryDark"
            android:layout_alignBottom="@id/membership_book_btn"/>
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>