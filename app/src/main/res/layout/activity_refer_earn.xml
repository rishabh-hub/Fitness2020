<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReferEarn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="@color/primaryBlue"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_refer_earn_back_btn"
            android:src="@drawable/ic_chevron_left_white_24dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="@string/refer_earn"
            android:textColor="#fff"
            android:fontFamily="@font/metropolisbold"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/ref_earn_head"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/toolbar"
        android:background="@drawable/refearn">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/metropolislight"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Refer your Fitness2020 to ypur friends and get rewarded for their actions"
            android:textSize="12sp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/ref_earn_back">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/metropolisbold"
                android:textAlignment="center"
                android:text="KAL972"
                android:id="@+id/ref_earn_code"
                android:textSize="19sp"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="@color/primaryBlue"
                android:background="@drawable/ic_clipboard"
                android:id="@+id/ref_earn_copy_promo_btn"
                android:layout_margin="10dp"/>


        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/ref_earn_text"
        android:layout_below="@id/ref_earn_head"
        android:textAlignment="center"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s."/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="10dp"
        android:id="@+id/ref_earn_btn"
        android:layout_below="@id/socials"
        android:background="@drawable/bg_button"
        android:backgroundTint="@color/primaryBlue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="Invite friends and start earning"
        android:textColor="#fff"
        android:fontFamily="@font/metropolisbold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="40dp"
        android:layout_below="@id/ref_earn_text"
        android:gravity="center"
        android:id="@+id/socials">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/ic_whatsapp"
            android:id="@+id/ref_earn_whatsapp_btn"
            android:layout_margin="10dp"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/ic_facebook"
            android:id="@+id/ref_earn_fb_btn"
            android:layout_margin="10dp"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/ic_instagram"
            android:id="@+id/ref_earn_insta_btn"
            android:layout_margin="10dp"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/ic_email"
            android:id="@+id/ref_earn_email_btn"
            android:layout_margin="10dp"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/ic_sms"
            android:backgroundTint="@color/primaryBlue"
            android:id="@+id/ref_earn_sms_btn"
            android:layout_margin="10dp"/>

    </LinearLayout>


</RelativeLayout>