<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:gravity="center"
    android:layout_height="wrap_content"
    >
<androidx.cardview.widget.CardView
    android:layout_width="150dp"
    android:id="@+id/banner2_rv_item_cardview"
    app:cardCornerRadius="20sp"
    android:layout_margin="10sp"
    app:cardElevation="1sp"
    android:layout_height="100dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/banner2_rv_item_cardview_imgvw"
        android:scaleType="centerCrop"
        android:background="#ccc"
        />

</androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_below="@+id/banner2_rv_item_cardview"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="1dp"
        android:fontFamily="@font/metropolisbold"
        android:id="@+id/banner2_rv_item_cardview_gym_name"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:gravity="center"
        android:fontFamily="@font/metropolissemibold"
        android:layout_marginVertical="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/banner2_rv_item_cardview_gym_name"
        android:id="@+id/banner2_rv_item_cardview_gym_category"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:gravity="center"
        android:fontFamily="@font/metropolislight"
        android:layout_marginVertical="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/banner2_rv_item_cardview_gym_category"
        android:id="@+id/banner2_rv_item_cardview_gym_schedule"
        />


</RelativeLayout>