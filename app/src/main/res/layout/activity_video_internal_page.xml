<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoInternalPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:elevation="10dp"
        android:id="@+id/video_internal_page_toolbar"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_chevron_left_white_24dp"
            android:tint="@color/primaryBlue"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/primaryBlue"
            android:id="@+id/video_internal_page_back_btn"/>
        <TextView
            android:id="@+id/video_internal_page_heading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:fontFamily="@font/metropolisbold"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Daily workout Challenge"
            android:textColor="@color/primaryBlue"
            android:textSize="20sp" />


    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@id/video_internal_page_toolbar"
        android:background="@color/colorPrimaryDark"
        android:scaleType="centerCrop"
        android:id="@+id/video_internal_page_thumbnail"/>


    <ImageView
        android:id="@+id/play_button"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@id/video_internal_page_toolbar"
        android:elevation="8dp"
        android:padding="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_play1" />

    <TextView
        android:id="@+id/video_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_internal_page_thumbnail"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/metropolisbold"
        android:padding="8dp"
        android:text="30 Min Fit Routine"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp" />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="1.5dp"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/line"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="8dp"
    android:layout_below="@id/video_heading"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/line"
        android:textSize="13sp"
        android:fontFamily="@font/metropolismedium"
        android:text="@string/dummy_long_text"
        android:id="@+id/video_internal_page_desc"/>


</RelativeLayout>