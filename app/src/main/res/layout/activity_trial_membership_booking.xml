<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TrialMembershipBooking">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@id/bottom_section">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/top_section">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/month_12"
        android:layout_margin="10dp"
        android:id="@+id/trial_membership_booking_image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:fontFamily="@font/metropolisbold"
        android:text="Fitness Pass Booking Page"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/trial_membership_booking_image"
        android:id="@+id/trial_membership_booking_head"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/metropolisbold"
        android:text="Description about the membership."
        android:textAlignment="center"
         android:layout_below="@id/trial_membership_booking_head"
        android:id="@+id/trial_membership_booking_desc"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/trial_membership_booking_desc"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/booking_summary_card">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#000"
            android:id="@+id/order_summary"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/metropolisbold"
            android:text="Order Summary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/order_summary"
                android:layout_centerVertical="true"
                android:id="@+id/pass_name"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/metropolisbold"
                android:text="Unlimited Trials"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/pass_name"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/line_1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:id="@+id/summary_card_headings"
                android:layout_below="@id/line_1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Term"
                    android:textColor="#000"
                    android:fontFamily="@font/metropolisbold"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Discount"
                    android:textColor="#000"
                    android:fontFamily="@font/metropolisbold"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:text="Amount"
                    android:fontFamily="@font/metropolisbold"
                    android:textAlignment="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/summary_card_headings"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/line_2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:id="@+id/summary_card_info"
                android:layout_below="@id/line_2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 Month"
                    android:id="@+id/pass_duration"
                    android:fontFamily="@font/metropolisbold"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="90 %"
                    android:id="@+id/pass_discount"
                    android:fontFamily="@font/metropolisbold"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50"
                    android:id="@+id/pass_amount"
                    android:fontFamily="@font/metropolisbold"
                    android:textAlignment="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/summary_card_info"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/line_3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:id="@+id/summary_card_total"
                android:layout_below="@id/line_3"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total"
                    android:fontFamily="@font/metropolisbold"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â‚¹ 50"
                    android:id="@+id/pass_total_amount"
                    android:textColor="#000"
                    android:fontFamily="@font/metropolisbold"
                    android:textAlignment="center"/>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:fontFamily="@font/metropolisbold"
        android:text="Recommendations"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/booking_summary_card"
        android:id="@+id/trial_membership_booking_recommendation_head"/>

    </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:id="@+id/bottom_section"
        android:layout_alignParentBottom="true">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:cursorVisible="false"
            android:focusedByDefault="false"
            android:focusableInTouchMode="true"
            android:focusable="auto"
            android:textColorHint="#fff"
            android:singleLine="true"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/metropolisbold"
            android:hint="Promo Code"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:text="Book"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_button"
            android:textColor="#fff"
            android:backgroundTint="@color/bookBtn"/>
    </RelativeLayout>


</RelativeLayout>