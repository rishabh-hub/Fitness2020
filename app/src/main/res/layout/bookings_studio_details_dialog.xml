<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#fff"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookings_rv_item_container1"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close_24px"
                android:layout_alignParentEnd="true"
                android:id="@+id/booking_dialog_cut_btn"
                />
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="10dp"
                android:layout_below="@id/line"
                android:scaleType="centerCrop"
                android:id="@+id/bookings_diaolog_imgvw"
                android:background="@color/primaryBlue"
                 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="3dp"
                android:layout_alignParentTop="true"
                android:textColor="@color/primaryBlue"
                android:layout_toLeftOf="@id/booking_dialog_cut_btn"
                android:textSize="17sp"
                android:fontFamily="@font/metropolisbold"
                android:id="@+id/bookings_dialog_product_name"
                android:text="Booking Name"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@id/bookings_dialog_product_name"
                android:id="@+id/line"
                android:background="@color/primaryBlue"
                android:layout_alignEnd="@id/booking_dialog_cut_btn"
                android:layout_marginVertical="10dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookings_diaolog_imgvw"
                android:id="@+id/bookings_dialog_date_tv"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/metropolisbold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="Date: "
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toRightOf="@id/bookings_dialog_date_tv"
                android:layout_alignStart="@id/bookings_dialog_activity"
                android:layout_alignBottom="@id/bookings_dialog_date_tv"
                android:id="@+id/bookings_dialog_date"
                android:textColor="#000"
                android:maxLines="2"
                android:text="21/09/21"
                />

            <TextView
                android:id="@+id/bookings_dialog_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookings_dialog_date_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/metropolisbold"
                android:text="Time: "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bookings_dialog_time_tv"
                android:layout_alignStart="@id/bookings_dialog_activity"
                android:textColor="#000"
                android:textSize="12sp"
                android:text="7:30 PM"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:layout_alignBottom="@id/bookings_dialog_time_tv"
                android:id="@+id/bookings_dialog_time"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookings_dialog_time_tv"
                android:id="@+id/bookings_dialog_activity_tv"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:fontFamily="@font/metropolisbold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="10dp"
                android:text="Activity: "
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bookings_dialog_activity_tv"
                android:textColor="#000"
                android:textSize="12sp"
                android:layout_alignStart="@id/bookings_dialog_purchase_detail"
                android:text="Functional Training"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:layout_alignBottom="@id/bookings_dialog_activity_tv"
                android:id="@+id/bookings_dialog_activity"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookings_dialog_activity_tv"
                android:id="@+id/bookings_dialog_orderid_tv"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:fontFamily="@font/metropolisbold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="10dp"
                android:text="OrderID: "
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bookings_dialog_orderid_tv"
                android:textColor="#000"
                android:layout_alignStart="@id/bookings_dialog_purchase_detail"
                android:text="AO14014"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:textSize="12sp"
                android:layout_alignBottom="@id/bookings_dialog_orderid_tv"
                android:id="@+id/bookings_dialog_orderid"
                />

            <TextView
                android:id="@+id/bookings_rv_item_code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookings_dialog_orderid_tv"
                android:fontFamily="@font/metropolisbold"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:layout_alignStart="@id/bookings_dialog_orderid_tv"
                android:text="Code: "
                android:textColor="@color/colorPrimaryDark" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookings_dialog_code"
                android:textColor="@color/black"
                android:text="12021935"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:fontFamily="@font/metropolissemibold"
                android:layout_alignBottom="@id/bookings_rv_item_code_tv"
                android:layout_alignStart="@id/bookings_dialog_purchase_detail"
                android:layout_alignParentEnd="true"
                />


            <TextView
                android:id="@+id/bookings_rv_item_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookings_rv_item_code_tv"
                android:layout_alignStart="@id/bookings_dialog_orderid_tv"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/metropolisbold"
                android:text="Status: "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookings_dialog_status"
                android:layout_toRightOf="@id/bookings_rv_item_status_tv"
                android:textColor="@color/primaryBlue"
                android:layout_alignStart="@id/bookings_dialog_purchase_detail"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:textSize="12sp"
                android:layout_alignBottom="@id/bookings_rv_item_status_tv"
                android:text="REDEEMED"
                android:fontFamily="@font/metropolissemibold"
                />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookings_rv_item_address2_tv"
                android:text="Location: "
                android:layout_below="@id/bookings_rv_item_status_tv"
                android:layout_alignStart="@id/bookings_dialog_orderid_tv"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:textSize="12sp"
                android:fontFamily="@font/metropolisbold"
                />

            <TextView
                android:id="@+id/bookings_dialog_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignBottom="@id/bookings_rv_item_address2_tv"
                android:layout_alignStart="@id/bookings_dialog_purchase_detail"
                android:fontFamily="@font/metropolislight"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:textSize="12sp"
                android:layout_toLeftOf="@id/booking_dialog_locate_btn"
                android:text="221 Baker Street, New Delhi"
                android:textColor="@color/black"
/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:foregroundGravity="right"
                android:src="@drawable/ic_location"
                android:layout_alignBottom="@id/bookings_dialog_address"

                android:id="@+id/booking_dialog_locate_btn"/>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookings_rv_item_purchase_detail_tv"
                android:text="Purchase Detail:"
                android:layout_below="@id/bookings_rv_item_address2_tv"
                android:layout_alignStart="@id/bookings_dialog_orderid_tv"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:textSize="12sp"
                android:fontFamily="@font/metropolisbold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookings_dialog_purchase_detail"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_toRightOf="@id/bookings_rv_item_purchase_detail_tv"
                android:layout_alignBottom="@id/bookings_rv_item_purchase_detail_tv"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:text="Free Trial"
                android:textSize="12sp"
                android:fontFamily="@font/metropolislight"
                />




        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookings_rv_item_comtainer8"
            android:orientation="horizontal"
            android:layout_below="@id/bookings_rv_item_container1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:weightSum="2"
            android:padding="3dp"
            android:gravity="center">
            <Button
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button"
                android:backgroundTint="@color/primaryBlue"
                android:id="@+id/booking_dialog_call_button"
                android:layout_marginHorizontal="10dp"
                android:text="Call"
                android:textColor="#fff"
                android:textStyle="bold"/>


        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>