<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:layout_margin="5sp"
            >

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5sp"
                android:background="@drawable/ic_menu_black_24dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location_spinner"
                android:elevation="5sp"
                android:layout_toEndOf="@id/menu_button"
                android:layout_toStartOf="@id/user_image_cardvw"
                android:layout_marginStart="5sp"
                android:gravity="center"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                app:cardCornerRadius="20sp"
                android:id="@+id/user_image_cardvw"
                >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/user_image_imgvw"
                android:src="@mipmap/ic_launcher"
                />
            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_above="@id/bottom_nav"
            android:id="@+id/frame_layout"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_nav"
            android:background="#ffffff"
            app:itemIconSize="25sp"
            app:menu="@menu/bottomnav_menu"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/main_nav"
        app:itemIconTint="#0f5e4d"
        app:itemTextColor="#0f5e4d"
        app:menu="@menu/side_drawer_menu"
        app:headerLayout="@layout/drawer_header_layout"
        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>