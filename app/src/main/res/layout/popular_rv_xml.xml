<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10sp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="80sp">

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="70dp"
        app:cardCornerRadius="15dp"
        android:layout_centerVertical="true"
        android:id="@+id/popular_rv_xml_cardvw"
        >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/popular_rv_xml_imgvw"
        android:scaleType="centerCrop"
        />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@id/popular_rv_xml_book"
        android:layout_toEndOf="@id/popular_rv_xml_cardvw"
        android:id="@+id/popular_rv_xml_text"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolisbold"
            android:id="@+id/popular_rv_xml_name"
            android:gravity="center"
            android:text="Name of gym"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolisextrabolditalic"
            android:id="@+id/popular_rv_xml_cat"
            android:gravity="center"
            android:text="Type(i.e.gym)"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp"
            android:layout_below="@id/popular_rv_xml_name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolisregular"
            android:gravity="center"
            android:id="@+id/popular_rv_xml_address"
            android:text="Address of gym"
            android:textSize="10sp"
            android:layout_below="@id/popular_rv_xml_cat"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolisbold"
            android:gravity="center"
            android:id="@+id/popular_rv_xml_recommended"
            android:text="Recommended"
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"
            android:padding="1sp"
            android:layout_marginTop="1dp"
            android:layout_below="@id/popular_rv_xml_address"
            />


    </RelativeLayout>
    <Button
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:text="BOOK"
        android:gravity="center"
        android:layout_margin="5dp"
        android:textColor="#fff"
        android:textSize="12sp"
        android:padding="1dp"
        android:background="@drawable/bg_button"
        android:backgroundTint="@color/bookBtn"
        android:id="@+id/popular_rv_xml_book"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/bg_button"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_black_12dp"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="12sp"
        android:padding="1dp"
        android:id="@+id/popular_rv_xml_rating"
        />
    </LinearLayout>

</RelativeLayout>