<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10sp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:id="@+id/popular_rv_xml_text"
        >

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="15dp"
        android:layout_centerVertical="true"
        android:id="@+id/popular_rv_xml_cardvw"
        >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/popular_rv_xml_imgvw"
        android:scaleType="centerCrop"
        />
    </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolisbold"
            android:id="@+id/popular_rv_xml_name"
            android:text="Gym Name"
            android:textColor="#000"
            android:layout_toRightOf="@id/popular_rv_xml_cardvw"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:layout_margin="2dp"
            android:padding="0.5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolisextrabolditalic"
            android:id="@+id/popular_rv_xml_cat"
            android:text="Type(i.e.gym)"
            android:textColor="#656565"
            android:textSize="11sp"
            android:layout_margin="2dp"
            android:padding="0.5dp"
            android:textAlignment="viewStart"
            android:layout_below="@id/popular_rv_xml_name"
            android:layout_toRightOf="@id/popular_rv_xml_cardvw"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolisregular"
            android:textAlignment="viewStart"
            android:id="@+id/popular_rv_xml_address"
            android:textColor="@color/colorPrimaryDark"
            android:text="Address of gym"
            android:textSize="10sp"
            android:layout_margin="2dp"
            android:padding="0.5dp"
            android:layout_below="@id/popular_rv_xml_cat"
            android:layout_toRightOf="@id/popular_rv_xml_cardvw"
            />

    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/qcregular"
            android:id="@+id/popular_rv_xml_points"
            android:textColor="#C3A81E"
            android:text="Fitness Pass | 20 Points"
            android:textSize="10sp"
            android:layout_marginLeft="85dp"
            android:padding="0.5dp"
            android:layout_below="@id/popular_rv_xml_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolisbold"
            android:gravity="center"
            android:id="@+id/popular_rv_xml_recommended"
            android:text="Recommended"
            android:textSize="10sp"
            android:textColor="#FF004D"
            android:padding="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="85dp"
            android:layout_below="@id/popular_rv_xml_points"
            />



