<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:id="@+id/home_scrollvw"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trending"
                android:textSize="20sp"
                android:textColor="#000"
                android:fontFamily="@font/qcregular"
                android:id="@+id/home_trending_tv"
                android:layout_marginTop="5sp"
                android:layout_marginStart="10sp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/home_trending_rv"
                android:layout_below="@id/home_trending_tv"
                />



<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="horizontal"-->
<!--        android:layout_below="@id/home_banner1_rv"-->
<!--        android:layout_marginTop="5sp"-->
<!--        android:id="@+id/home_activities_rv"-->
<!--        />-->
            <!--Filters -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="8sp"
                android:layout_below="@id/home_trending_rv"
                android:gravity="fill"
                android:id="@+id/home_fragment_explore_tab_activities"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    app:cardCornerRadius="25sp"
                    android:layout_marginHorizontal="5sp"
                    android:layout_marginVertical="2sp"
                    android:id="@+id/home_fragment_explore_tab_activities_cardvw1"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/home_fragment_explore_tab_activities_cardvw_imgvw1"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    app:cardCornerRadius="25sp"
                    android:layout_marginHorizontal="5sp"
                    android:layout_marginVertical="2sp"
                    android:layout_toEndOf="@id/home_fragment_explore_tab_activities_cardvw1"
                    android:id="@+id/home_fragment_explore_tab_activities_cardvw2"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/home_fragment_explore_tab_activities_cardvw_imgvw2"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    app:cardCornerRadius="25sp"
                    android:layout_marginHorizontal="5sp"
                    android:layout_marginVertical="2sp"
                    android:layout_toEndOf="@id/home_fragment_explore_tab_activities_cardvw2"
                    android:id="@+id/home_fragment_explore_tab_activities_cardvw3"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/home_fragment_explore_tab_activities_cardvw_imgvw3"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    app:cardCornerRadius="25sp"
                    android:layout_marginHorizontal="5sp"
                    android:layout_marginVertical="2sp"
                    android:layout_toEndOf="@id/home_fragment_explore_tab_activities_cardvw3"
                    android:id="@+id/home_fragment_explore_tab_activities_cardvw4"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/home_fragment_explore_tab_activities_cardvw_imgvw4"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View More"
                    android:textSize="10sp"
                    android:layout_marginHorizontal="2sp"
                    android:layout_marginVertical="13sp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/home_fragment_explore_tab_activities_btn"
                    />



            </RelativeLayout>


            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/filter_spinner"
                android:elevation="5sp"
                android:layout_below="@id/home_fragment_explore_tab_activities"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5sp"
                android:gravity="center"
                />





    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/filter_spinner"
        android:id="@+id/home_trending_rv_1"
        android:layout_marginTop="5sp"
        />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular"
                android:textSize="20sp"
                android:textColor="#000"
                android:fontFamily="@font/qcregular"
                android:layout_below="@id/home_trending_rv_1"
                android:id="@+id/home_popular_tv"
                android:layout_marginVertical="3sp"
                android:layout_marginStart="10sp"
                />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/home_popular_tv"
        android:layout_marginTop="5sp"
        android:id="@+id/home_banner2_rv"
        />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/home_banner2_rv"
                android:id="@+id/home_popular_vertical_rv"
                android:layout_marginTop="5sp"
                />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
