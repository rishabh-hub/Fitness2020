<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/webGray"
    android:elevation="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolisbold"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:paddingVertical="10dp"
            android:background="@color/primaryBlue"
            android:text="Offering Name"
            android:paddingHorizontal="10dp"
            android:id="@+id/offering_rv_item_name"
            android:layout_marginBottom="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/offering_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@id/offering_book_btn"
                android:fontFamily="@font/metropolisbold"
                android:gravity="center"
                android:text="1 Yoga Class"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/offering_name"
                    android:textColor="@color/primaryBlue"
                    android:fontFamily="@font/metropolisbold"
                    android:textAlignment="center"
                    android:text="Rs 499"
                    android:id="@+id/offering_price"/>


                <Button
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_button"
                    android:textColor="#fff"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_marginVertical="5dp"
                    android:textSize="13sp"
                    android:id="@+id/offering_book_btn"
                    android:text="Book"/>


        </RelativeLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>